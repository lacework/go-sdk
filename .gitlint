# Commit msg lint config

## https://jorisroovers.com/gitlint/latest/ignoring_commits/
## https://jorisroovers.com/gitlint/latest/rules/builtin_rules/

[general]
regex-style-search=true
ignore=B1,B6

# Match title prefix
[title-match-regex]
regex=^feat(:|\(.*\):)|fix(:|\(.*\):)|style(:|\(.*\):)|refactor(:|\(.*\):)|test(:|\(.*\):)|docs(:|\(.*\):)|chore(:|\(.*\):)|build(:|\(.*\):)|ci(:|\(.*\):)|perf(:|\(.*\):)|metric(:|\(.*\):)|misc(:|\(.*\):)|release:

# Ignore Release commits
[ignore-by-title]
regex=Release(.*)
ignore=all